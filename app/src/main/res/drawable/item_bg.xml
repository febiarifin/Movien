<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_dark_onSecondary" />
            <gradient
                android:type="linear"
                android:angle="@integer/material_motion_duration_short_1"
                android:startColor="@color/md_theme_dark_onSecondary"
                android:centerColor="@color/md_theme_dark_onSecondary"
                android:endColor="@color/md_theme_dark_secondaryContainer"/>
        </shape>
    </item>

    <item android:bottom="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/md_theme_dark_outlineVariant"/>
        </shape>
    </item>
</layer-list>